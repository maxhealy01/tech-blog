<article class="post">
  <div class='title'>
    <a href='/post/{{id}}' target="_blank">{{title}}</a>
    <h5>Created on {{format_date created_at}} by {{user.username}}</h5>
  </div>
  <div class='body'>
    <p>{{post_body}}</p>
  </div>
  <div class="meta">
    <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
  </div>
</article>